<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12 col-sm-10 col-sm-offset-1">

    <div align="center">
      <%= image_tag(@user.profile_image_uri(:original), alt: @user.name,
                                                      size: "200x200") %>
      <h1><%= @user.name %> </h1>
    </div>

    <% @timeline.each do |tweet| %>
      <div class="panel panel-default">
        <% if tweet.retweet? %>
          <div class="panel-heading">
            Retweeting
            <%= link_to "@" + tweet.retweeted_status.user.screen_name,
                  user_path(tweet.retweeted_status.user.screen_name) %>
          </div>
        <% end %>
        <div class="panel-body">
          <%= text_with_user_mentions(tweet) %>
        </div>
        <div class="panel-footer text-right">
          <%= time_ago_in_words(tweet.created_at) %> ago
        </div>
      </div>
    <% end %>
  </div>
</div>
